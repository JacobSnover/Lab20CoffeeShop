
@{
    ViewBag.Title = "ListItems";
}

<link href="~/Content/TextStyle.css" rel="stylesheet" />

<h2>ListItems</h2>
<form action="/Home/AdminListByName" method="get">
    <h5>Search by Name</h5>
    <input type="text" name="ProdName" />
    <input type="submit" value="Search by Name" />
</form>

<form action="/Home/AdminListByCategory" method="get">
    <h5>Search by Category</h5>
    <input type="text" name="ProdDesc" />
    <input type="submit" value="Search by Category" />
</form>

<br />
<table class="table">
    
    <tr>
        <th style="color:aliceblue">ProdName</th>
        <th style="color:aliceblue">ProdDesc</th>
        <th style="color:aliceblue">ProdQuan</th>
        <th style="color:aliceblue">ProdPrice</th>
    </tr>
    @foreach (var item in ViewBag.ItemList)
    {
        <tr>
            <td>
                <h5>
                    @item.ProdName
                </h5>
            </td>
            <td> 
                <h5>
                    @item.ProdDesc
                </h5>
            </td>
            <td>
                <h5>
                    @item.ProdQuan
                </h5>
            </td>
            <td> 
                <h5>
                    @item.ProdPrice
                </h5>
            </td>
            <td>
                <a href="/Home/DeleteItem?ProdName=@item.ProdName" class="btn btn-default btn-sm" onclick="return confirm('Are you sure?')">
                    <span class="glyphicon glyphicon-trash"></span> Delete
                </a>
            </td>
            <td>
                <a href="/Home/UpdateItem?ProdName=@item.ProdName" class="btn btn-default btn-sm">
                    <span class="glyphicon glyphicon-trash"></span> Update
                </a>
            </td>
        </tr>
    }
</table>

